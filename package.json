{
  "name": "tsi18n",
  "version": "0.1.0",
  "description": "Simple Internationalization library",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build:core": "yarn workspace @tsi18n/core run build",
    "build:react": "yarn workspace @tsi18n/react run build",
    "build:next": "yarn workspace @tsi18n/next run build",
    "build:remix": "yarn workspace @tsi18n/remix run build",
    "build:interpolate": "yarn workspace @tsi18n/interpolate run build",
    "bootstrap": "yarn build:core && yarn build:react && yarn build",
    "build": "yarn workspaces run build",
    "lint": "yarn workspaces run lint"
  }
}
